{
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "bounded",
    "workbench.colorTheme": "Catppuccin Frappé",
    "editor.aiStats.enabled": true,
    "editor.autoIndentOnPaste": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "workbench.preferredDarkColorTheme": "Catppuccin Frappé",
    "workbench.preferredLightColorTheme": "Catppuccin Latte",
    "workbench.iconTheme": "catppuccin-frappe",
    "remote.downloadExtensionsLocally": true,
    "chat.agentSessionsViewLocation": "view",
    "chat.checkpoints.showFileChanges": true,
    "chat.editing.autoAcceptDelay": 10,
    "chat.editor.wordWrap": "on",
    "chat.edits2.enabled": true,
    "chat.mcp.assisted.nuget.enabled": true,
    "chat.mcp.autostart": "newAndOutdated",
    "chat.mcp.discovery.enabled": {
        "cursor-global": true,
        "cursor-workspace": true
    },
    "chat.renderRelatedFiles": true,
    "chat.useChatSessionsForCloudButton": true,
    "evenBetterToml.formatter.alignComments": true,
    "git.alwaysSignOff": true,
    "git.autofetch": true,
    "git.autoStash": true,
    "git.branchProtectionPrompt": "alwaysCommitToNewBranch",
    "git.branchRandomName.enable": true,
    "git.closeDiffOnOperation": true,
    "git.enableSmartCommit": true,
    "git.fetchOnPull": true,
    "git.followTagsWhenSync": true,
    "git.openAfterClone": "whenNoFolderOpen",
    "git.pruneOnFetch": true,
    "git.pullBeforeCheckout": true,
    "git.rebaseWhenSync": true,
    "git.replaceTagsWhenPull": true,
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "github-actions.workflows.pinned.refresh.enabled": false,
    "github.copilot.enable": {
        "markdown": true
    },
    "github.copilot.chat.scopeSelection": true,
    "github.copilot.chat.terminalChatLocation": "terminal",
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.chat.agent.thinkingTool": true,
    "github.copilot.chat.alternateGptPrompt.enabled": true,
    "github.copilot.chat.editor.temporalContext.enabled": true,
    "github.copilot.chat.edits.temporalContext.enabled": true,
    "github.copilot.chat.generateTests.codeLens": true,
    "github.copilot.chat.newWorkspace.useContext7": true,
    "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
        {
            "text": "Include a rollup summary of every commit message in the pull request description."
        }
    ],
    "githubPullRequests.defaultMergeMethod": "rebase",
    "githubPullRequests.experimental.notificationsMarkPullRequests": "markAsRead",
    "githubPullRequests.pullBranch": "always",
    "githubPullRequests.pullRequestDescription": "Copilot",
    "githubPullRequests.pushBranch": "always",
    "githubPullRequests.terminalLinksHandler": "vscode",
    "gitlens.codeLens.includeSingleLineSymbols": true,
    "gitlens.graph.dimMergeCommits": true,
    "gitlens.worktrees.openAfterCreate": "onlyWhenEmpty",
    "gitlens.gitkraken.cli.integration.enabled": true,
    "gitlens.ai.experimental.composer.enabled": true,
    "gitlens.detectNestedRepositories": true,
    "gitlens.advanced.commitOrdering": "topo",
    "gitlens.blame.ignoreWhitespace": true,
    "html.format.indentHandlebars": true,
    "html.format.indentInnerHtml": true,
    "html.format.templating": true,
    "markdown.editor.updateLinksOnPaste.enabled": false,
    "markdown.preview.typographer": true,
    "markdown.updateLinksOnFileMove.enabled": "always",
    "markdown.extension.completion.enabled": true,
    "markdown.extension.italic.indicator": "_",
    "markdown.extension.print.imgToBase64": true,
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "markdown.extension.toc.orderedList": false,
    "markdown-mermaid.lightModeTheme": "neutral",
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    "rust-analyzer.restartServerOnConfigChange": false,
    "rust-analyzer.assist.emitMustUse": true,
    "rust-analyzer.assist.preferSelf": true,
    "rust-analyzer.completion.fullFunctionSignatures.enable": true,
    "rust-analyzer.completion.hideDeprecated": true,
    "rust-analyzer.completion.privateEditable.enable": true
}
